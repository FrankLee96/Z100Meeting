<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginRight="@dimen/distance_ten_dp"
              android:background="@color/color_agenda_list_bg">
    <TextView
        android:id="@+id/id_item_agenda_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/distance_ten_dp"
        android:text="议程1"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/id_item_agenda_title"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/distance_ten_dp"
        android:ellipsize="start"
        android:text="标题"
        android:textColor="@android:color/white"/>

</LinearLayout>