<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzz100.Z100_HuiYi.meeting.delegate.delegateDetail.DelegateDetailActivity">

    <com.gzz100.Z100_HuiYi.meeting.NavBarView
        android:id="@+id/id_delegate_detail_tbv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.gzz100.Z100_HuiYi.meeting.NavBarView>

    <LinearLayout
        android:id="@+id/id_delegate_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/id_delegate_detail_part1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center|right">

                <ImageView
                    android:id="@+id/id_delegate_detail_role_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/role" />

                <TextView
                    android:id="@+id/id_delegate_role_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_delegate_detail_role_image"
                    android:text="姓名" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|left">
                <TextView
                    android:id="@+id/id_delegate_detail_department_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="部门："/>

                <TextView
                    android:id="@+id/id_delegate_detail_job_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职位："
                    android:layout_below="@id/id_delegate_detail_department_tab"/>
                <TextView
                    android:id="@+id/id_delegate_detail_role_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_delegate_detail_job_tab"
                    android:text="角色："/>


                <TextView
                    android:id="@+id/id_delelgate_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="某部门"
                    android:layout_toRightOf="@id/id_delegate_detail_department_tab"
                   />

                <TextView
                    android:id="@+id/id_delegate_detail_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="某职位"
                    android:layout_toRightOf="@id/id_delegate_detail_job_tab"
                    android:layout_below="@id/id_delelgate_department"/>
                <TextView
                    android:id="@+id/id_delegate_detail_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="某角色"
                    android:layout_toRightOf="@id/id_delegate_detail_role_tab"
                    android:layout_below="@id/id_delegate_detail_job"/>



            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
           >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_delegate_detail_part2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|top">

            <TextView
                android:id="@+id/id_delegate_detail_info_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细信息："
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/id_delegate_detail_info_tab"
                android:text="某详细信息"
                />
        </RelativeLayout>



    </LinearLayout>
</LinearLayout>
